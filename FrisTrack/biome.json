{
    "$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
    "vcs": {
        "enabled": false,
        "clientKind": "git",
        "useIgnoreFile": false
    },
    "files": {
        "ignoreUnknown": false,
        "includes": [
            "app/**", "components/perso_components/**", "contexts/**", "services/**"
        ]
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "tab",
        "indentWidth": 2,
        "lineWidth": 100
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "complexity": {
                "noUselessFragments": "warn",
                "useSimplifiedLogicExpression": "warn"
            },
            "style": {
                "noNonNullAssertion": "warn",
                "useConst": "error",
                "useTemplate": "warn"
            },
            "suspicious": {
                "noDebugger": "error",
                "noConsole": "warn"
            },
            "correctness": {
                "noUnusedVariables": "error",
                "noUnusedImports": "error"
            }
        }
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "double",
            "semicolons": "always",
            "trailingCommas": "es5"
        }
    },
    "json": {
        "formatter": {
            "indentStyle": "space",
            "indentWidth": 2
        }
    },
    "assist": {
        "enabled": true,
        "actions": {
            "source": {
                "organizeImports": "on"
            }
        }
    }
}